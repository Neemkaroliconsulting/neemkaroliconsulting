<odoo>
  <record id="view_product_form_inherit_packaging" model="ir.ui.view">
    <field name="name">product.template.form.inherit.packaging</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
        <page string="Packaging Info">
          <group>
            <field name="packaging_type"/>
            <field name="packaging_weight"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
